{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy to Google App Engine (testing, version v1)",
            "type": "shell",
            "command": "tasks/deploy-to-google-app-engine.sh",
            "args": [
                "me-dstark-nl-test",
                "v1-testing"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile Less file for login",
            "type": "shell",
            "command": "lessc",
            "args": [
                "${workspaceFolder}/src/google-app-engine/web-gui-v1/static-src/less/me-loginform.less",
                "${workspaceFolder}/src/google-app-engine/web-gui-v1/static/css/me-loginform.css"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile Less file for dashboard",
            "type": "shell",
            "command": "lessc",
            "args": [
                "${workspaceFolder}/src/google-app-engine/web-gui-v1/static-src/less/me-dashboard.less",
                "${workspaceFolder}/src/google-app-engine/web-gui-v1/static/css/me-dashboard.css"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile Vue file for the login",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build-login"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${workspaceFolder}/src/google-app-engine/web-gui-v1/static-src/vue/"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile Vue file for the dashboard",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build-dashboard"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${workspaceFolder}/src/google-app-engine/web-gui-v1/static-src/vue/"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile front-end components",
            "dependsOn": ["Compile Less file for login", "Compile Less file for dashboard", "Compile Vue file for the login", "Compile Vue file for the dashboard"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Vue development server for the login form",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev-login"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${workspaceFolder}/src/google-app-engine/web-gui-v1/static-src/vue/"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Vue development server for the dashboard",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev-dashboard"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${workspaceFolder}/src/google-app-engine/web-gui-v1/static-src/vue/"
            },
            "problemMatcher": []
        }
    ]
}
